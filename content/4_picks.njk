layout: layout.njk
title: Generate Picks
permalink: "/picks/"
---

<div data-controller="picks">
  <h1 class="text-4xl font-bold tracking-tight">Generate Picks</h1>
  
  <div class="mt-4">
    <div data-picks-target="loading" class="text-lg">
      Loading odds data...
    </div>
    
    <div data-picks-target="error" class="hidden text-red-600 dark:text-red-400">
      <p class="text-lg font-semibold">Error loading odds data</p>
      <p class="text-sm mt-2" data-picks-target="errorMessage"></p>
    </div>
    
    <div data-picks-target="content" class="hidden">
      <div class="mb-4">
        <h2 class="text-2xl font-semibold">
          Selection for Week <span data-picks-target="weekNumber"></span>
        </h2>
      </div>
      
      <div class="space-y-4" data-picks-target="games">
        <!-- Games will be inserted here -->
      </div>
      
      <div class="mt-6">
        <label for="tiebreak" class="block text-sm font-medium mb-2">
          Tiebreak Score Total:
        </label>
        <input 
          type="number" 
          id="tiebreak"
          data-picks-target="tiebreak"
          data-action="input->picks#updateOutput"
          class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-slate-700 w-32"
          placeholder="e.g., 47"
        />
      </div>
      
      <div class="mt-6">
        <h3 class="text-xl font-semibold mb-2">Your Pick Slip:</h3>
        <div class="bg-gray-100 dark:bg-slate-700 p-4 rounded-md">
          <pre data-picks-target="output" class="text-sm whitespace-pre-wrap font-mono">No picks selected yet</pre>
        </div>
        <button 
          data-action="click->picks#copyToClipboard"
          class="mt-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md"
        >
          Copy to Clipboard
        </button>
        <span data-picks-target="copyStatus" class="ml-2 text-sm text-green-600 dark:text-green-400 hidden">
          Copied!
        </span>
      </div>
    </div>
  </div>
</div>
